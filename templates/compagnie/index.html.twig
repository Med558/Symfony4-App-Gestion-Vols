{% extends 'adminlayout.html.twig' %}


{% block body %}
    <h1>Compagnie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Origine</th>
                <th>Chiffredaffair</th>
                <th>Description</th>
                <th>Datecreation</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compagnie in compagnies %}
            <tr>
                <td>{{ compagnie.id }}</td>
                <td>{{ compagnie.nom }}</td>
                <td>{{ compagnie.origine }}</td>
                <td>{{ compagnie.chiffredaffair }}</td>
                <td>{{ compagnie.description }}</td>
                <td>{{ compagnie.datecreation }}</td>
                <td>{{ compagnie.logo }}</td>
                <td>
                    <a href="{{ path('compagnie_show', {'id': compagnie.id}) }}">show</a>
                    <a href="{{ path('compagnie_edit', {'id': compagnie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('compagnie_new') }}">Create new</a>
{% endblock %}
